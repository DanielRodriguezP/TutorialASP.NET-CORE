@page
@model BookListRazor.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="border container" style="padding:30px;">Edit Books</h2>
<br />

<div class="table-bordered container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="Book.Id"  />
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Name"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.Author" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Book.ISBN" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-3 col-md-offset-3">
                <input type="submit" value="Update" class="btn btn-primary form-control" />
            </div>
            <div class="col-md-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
            </div>
        </div>
    </form>
</div>


